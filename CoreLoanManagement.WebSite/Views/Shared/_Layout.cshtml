<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoreLoanManagement.WebSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/lib/jqueryui/themes/base/jquery-ui.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/CoreLoanManagement.WebSite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CoreLoanManagement.WebSite</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        
                        <li class="nav-item">@Html.ActionLink("Customers", "Customers", "Customer",null, new { @class = "nav-link text-dark"} )</li>
                        <li class="nav-item">@Html.ActionLink("Search Customers", "SearchCustomers", "Customer",null, new { @class = "nav-link text-dark"} )</li>
                        <li class="nav-item">@Html.ActionLink("Add Customer", "AddCustomer", "Customer",null, new { @class = "nav-link text-dark"} )</li>
                        <li class="nav-item">@Html.ActionLink("Add Customer Form Col", "AddCustomerFormCollection", "Customer",null, new { @class = "nav-link text-dark"} )</li>
                        <li class="nav-item">@Html.ActionLink("Installment home page", "Index", "Installment",null, new { @class = "nav-link text-dark"} )</li>
                        <li class="nav-item">@Html.ActionLink("Installment list", "LoanInstallments", "Installment",null, new { @class = "nav-link text-dark"} )</li>
                        <li class="nav-item">@Html.ActionLink("Add Installment", "AddLoanInstallment", "Installment",null, new { @class = "nav-link text-dark"} )</li>
                        <li class="nav-item">@Html.ActionLink("Simulate Loan", "Simulateloan", "Loan",null, new { @class = "nav-link text-dark"} )</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CoreLoanManagement.WebSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script>
        var applicationURL = "http://localhost:5272/Customer/";
                        //GET FROM CONFIG
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
